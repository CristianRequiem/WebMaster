<% include partials/_header %>

    <!--Contenido-->
    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
        <div class="row">
            <div class="col-md-12">
            <div class="box" style="height:490px;">
                <div class="box-header with-border">
                <h3 class="box-title" id="titulo">Páginas</h3>
                </div>
                <div class="box-body" id="cuerpo">
                    <div class="row">
                        <div class="col-12 col-xl-8 mx-auto">
                            <table class="table table-borderless table-hover table-sm" id="pages-table">
                                <thead>
                                    <td><b>Nombre de página</b></td>
                                    <td><b>Descripción</b></td>
                                    <td><b>Tipo de página</b></td>
                                    <td><b>¿Activa?</b></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </thead>
                                <tbody>
                                    <% for(var i = 0; i < pages.length; i++) { %>
                                        <tr id="<%=pages[i]._id%>">
                                            <td><%=pages[i].title%></td>
                                            <td><%=pages[i].description%></td>
                                            <td><%=pages[i].page_type%></td>
                                            <td><%=pages[i].active ? 'Si' : 'No' %></td>
                                            <td><button class="btn btn-info" title="Ver" style="font-size:10px;"><span class="fas fa-eye"></span></button></td>
                                            <td><a href="/admin/pages/<%=pages[i]._id%>/edit" class="btn btn-success" title="Editar" style="font-size:10px;"><span class="fas fa-edit"></span></a></td>
                                            <td><button class="btn btn-danger" title="Eliminar" style="font-size:10px;" onclick="eliminarPagina('<%=pages[i]._id%>')"><span class="fas fa-trash-alt"></span></button></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-12 col-xl-4">
                            <div class="text-center">
                                <a href="#" class="btn btn-custom" data-toggle="modal" data-target="#modalCrearPagina">Crear página</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
        </section>
    </div>
    <!--Fin-Contenido-->

    <!-- Pantalla modal Crear Página -->
    <div class="modal fade" id="modalCrearPagina" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Página</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                <img src="../img/logo-2.png" alt="logo-2" class="mx-auto">
                </div>
                <div class="row">
                <form class="card card-body m-2">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Título de la página" id="title">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" placeholder="Descripción" rows="4" id="description"></textarea>
                    </div>
                    <!--<div class="form-group">
                        <input type="text" class="form-control" placeholder="URL" >
                    </div>-->
                    <div class="form-group">
                        <select class="form-control" id="page_type">
                            <option value="estatica">¿Tipo de página?</option>
                            <option value="estatica">Estática</option>
                            <option value="posts">Entradas</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="active">
                            <option value="true">¿Activada?</option>
                            <option value="true">Activada</option>
                            <option value="false">No activada</option>
                        </select>
                    </div>
                    <!--<div class="form-group">
                    <p>¿Activar comentarios?</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tipo_pag" id="" value="static_page" checked>
                        <label class="form-check-label" for="Si">
                        Página estática
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tipo_pag" id="" value="post_page">
                        <label class="form-check-label" for="No">
                        Página de entradas
                        </label>
                    </div>
                    </div>-->
                    <div class="row">
                    <button type="button" class="btn btn-custom mx-auto mr-2 btn-custom-w" data-dismiss="modal" onclick="crearPagina()">Crear página</button>
                    <button class="btn btn-danger mx-auto mr-2 btn-custom-w" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
                </div>
            </div>
            </div>
        </div>
    </div>

<% include partials/_footer %>