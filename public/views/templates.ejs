    <!-- Pantalla modal Crear Tema -->
    <div class="modal fade" id="modalCrearTema" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Tema</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <img src="../img/logo-2.png" alt="logo-2" class="mx-auto">
                </div>
                <div class="row">
                    <form class="card card-body m-2">
                        <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nombre del tema">
                        </div>
                        <div class="form-group">
                        <textarea class="form-control" placeholder="Descripción" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                        <h6 align="center">Lista de imágenes asociadas</h6>
                        <select multiple class="form-control">
                            <option>Imagen 1</option>
                            <option>Imagen 2</option>
                            <option>Imagen 3</option>
                        </select>
                        </div>
                        <div class="row">
                        <button class="btn btn-custom mx-auto" data-dismiss="modal">Crear tema</button>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>

